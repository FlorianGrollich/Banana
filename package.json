{
  "name": "banana",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run frontend\"",
    "server": "cd server && npm start",
    "frontend": "cd frontend && npm start",
    "lint": "eslint 'frontend/src/**/*.{ts,tsx}' 'frontend/src/components/**/*.{ts,tsx}'",
    "type-check": "tsc --noEmit",
    "format": "prettier --write 'frontend/src/**/*.{ts,tsx}' 'frontend/src/components/**/*.{ts,tsx}'",
    "lint-format": "eslint 'frontend/src/**/*.{ts,tsx}' 'frontend/src/components/**/*.{ts,tsx}' && prettier --write 'frontend/src/**/*.{ts,tsx}' 'frontend/src/components/**/*.{ts,tsx}'"
  },
  "workspaces": [
    "server",
    "frontend"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "concurrently": "^8.2.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-config-standard-with-typescript": "^39.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2"
  }
}
